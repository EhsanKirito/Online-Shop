<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#5A83A3"
    android:layout_height="match_parent"
    tools:context=".ui.features.categorydetails.CategoryDetailsFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCategoryDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/progressBarCategoryDetails"
        style="?android:attr/progressBarStyle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="@+id/rvCategoryDetails"
        app:layout_constraintEnd_toEndOf="@+id/rvCategoryDetails"
        app:layout_constraintStart_toStartOf="@+id/rvCategoryDetails"
        app:layout_constraintTop_toTopOf="@+id/rvCategoryDetails" />
</androidx.constraintlayout.widget.ConstraintLayout>